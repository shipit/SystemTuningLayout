<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"> <!-- use this to control distance from row above -->

    <TextView
        android:id="@+id/data_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Zone Dead Time (ms)"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:singleLine="true"/>

    <Spinner
        android:id="@+id/data_row_list"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:entries="@array/some_ints"
        android:layout_gravity="bottom"
        android:gravity="bottom"/>

    <ImageButton
        android:id="@+id/data_row_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_refresh"
        android:layout_gravity="bottom"/>

</LinearLayout>